				new ColumnProperty(nameof(Supplier.SupplierEmail))
				{
				Title = "Email",
				Width = "300"
				},
				new ColumnProperty(nameof(Supplier.Id))
				{
				Title = "Edit",
				Width = "50",
				ClassName =  NopColumnClassDefaults.Button,
				Render = new RenderButtonEdit(new DataUrl("~/Admin/Views/Edit"))
				},
				new ColumnProperty(nameof(Supplier.Id))
				{
				Title = "Delete",
				Width = "50",
				ClassName =  NopColumnClassDefaults.Button,
				Render = new RenderButtonEdit(new DataUrl("~/Admin/Views/Delete"))
				}
				}
		})
	</div>
</div>


