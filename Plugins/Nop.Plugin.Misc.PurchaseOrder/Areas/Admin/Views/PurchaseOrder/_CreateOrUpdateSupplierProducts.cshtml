@model CreatePurchaseOrderModel
<div class="card-body">
    <p>
        Selected Products
    </p>
    <div class="card card-default">
        <div class="card-body">

            @await Html.PartialAsync("Table", new DataTablesModel
            {
                Name = "supplierproducts-grid",
                UrlRead = new DataUrl("SupplierProductList", "PurchaseOrder", new RouteValueDictionary { [nameof(Model.SupplierProductSearchModel.PurchaseOrderNo)] = Model.SupplierProductSearchModel.PurchaseOrderNo }),
				UrlDelete = new DataUrl("SupplierProductDelete", "PurchaseOrder", null),
				UrlUpdate = new DataUrl("SupplierProductUpdate", "PurchaseOrder", null),
                Length = Model.SupplierProductSearchModel.PageSize,
                LengthMenu = Model.SupplierProductSearchModel.AvailablePageSizes,
                ColumnCollection = new List<ColumnProperty>
                    {
                        new ColumnProperty(nameof(SupplierProductModel.Product2Name))
                        {
                            Title = "Name"
                        },
                        new ColumnProperty(nameof(SupplierProductModel.DisplayOrder))
                        {
                            Title = "Display Order",
                            Width = "150",
                            ClassName = NopColumnClassDefaults.CenterAll,
                            Editable = true,
                            EditType = EditType.Number
                        },
                        new ColumnProperty(nameof(SupplierProductModel.ProductId2))
                        {
                            Title = T("Admin.Common.View").Text,
                            Width = "150",
                            ClassName = NopColumnClassDefaults.Button,
							Render = new RenderButtonView(new DataUrl("~/Admin/PurchaseOrder/Edit/", nameof(SupplierProductModel.Product2Name)))
                        },
                        new ColumnProperty(nameof(SupplierProductModel.Id))
                        {
                            Title = T("Admin.Common.Edit").Text,
                            Width = "200",
                            ClassName =  NopColumnClassDefaults.Button,
                            Render = new RenderButtonsInlineEdit()
                        },
                        new ColumnProperty(nameof(SupplierProductModel.Id))
                        {
                            Title = T("Admin.Common.Delete").Text,
                            Width = "100",
                            Render = new RenderButtonRemove(T("Admin.Common.Delete").Text),
                            ClassName = NopColumnClassDefaults.Button
                        }
                    }
            });
        </div>

        <div class="card-footer">
			<button type="submit" id="btnAddNewSupplierProduct" class="btn btn-primary" onclick="javascript:OpenWindow('@(Url.Action("SupplierProductAddPopup", "PurchaseOrder", new {SupplierId = Model.SupplierId, btnId = "btnRefreshSupplierProducts", formId = "product-form"}))', 800, 800, true); return false;">
                Add Products
            </button>
            <button type="submit" id="btnRefreshSupplierProducts" style="display: none"></button>
            <script>
                $(function() {
                    $('#btnRefreshSupplierProducts').click(function () {
                        //refresh grid
                        updateTable('#supplierproducts-grid');

                        //return false to don't reload a page
                        return false;
                    });
                });
            </script>
        </div>
    </div>
</div>